extends layout

block content
	.container
		form.form-signin.well(id='form', method='post', action='/login', role='form')
			h2.form-signin-heading Sign in to continue

			input.form-control(name='username', type='text', placeholder='Username' required autofocus)
			input.form-control(name='password', type='password', placeholder='Password')
			label.checkbox
				input(name='remember', type='checkbox', value='yes')
				span Stay signed in
			
			button.btn.btn-lg.btn-success.btn-block(type='submit') Sign in
